  },
  "homepage": "https://github.com/dot357/simpstore#readme",
  "devDependencies": {
    "@types/node": "^22.10.10",
    "@vitest/coverage-v8": "^3.0.4",
    "happy-dom": "^16.8.1",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vitest": "^3.0.4"
  },
  "publishConfig": {
    "access": "public"
