{
  "name": "@dot357/simpstore",
  "version": "0.1.0",
  "type": "module",
  "description": "A simple, framework-agnostic state management library inspired by Pinia",
  "main": "dist/simple-state-store.umd.js",
  "module": "dist/simple-state-store.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
